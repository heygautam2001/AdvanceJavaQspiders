package dql_statement_execution;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;

public class FetchDemo {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		try {
			Class.forName("org.postgresql.Driver");
			System.out.println("driver loaded");
			String url = "jdbc:postgresql://localhost:5433/school?user=postgres&password=root";
			Connection con = DriverManager.getConnection(url);
			System.out.println("Connection done");
			
			Statement stm = con.createStatement();
			
			String query = "select * from student s";
			
			// wqy 1 (execute()& getResultSet() )
			
			boolean res = stm.execute(query); // DQL => true
			
			ResultSet rs = stm.getResultSet();
			
			while(rs.next()) {
				System.out.println(rs.getInt(1) +" "+rs.getString("name")+" "+rs.getDouble(3)+" "+rs.getLong("phone")+" "+rs.getDate("dop"));
			}
			
			System.out.println("===========================================================");
			//Way 2 => executeQuery();
			
			ResultSet rs2 = stm.executeQuery(query);
			while(rs2.next()) {
				System.out.println(rs2.getInt(1) +" "+rs2.getString("name")+" "+rs2.getDouble(3)+" "+rs2.getLong("phone")+" "+rs2.getDate("dop"));
			}
			
			
			
			
		}catch(ClassNotFoundException e) {
			e.printStackTrace();
		}catch(SQLException se) {
			se.printStackTrace();
		}

	}

}
