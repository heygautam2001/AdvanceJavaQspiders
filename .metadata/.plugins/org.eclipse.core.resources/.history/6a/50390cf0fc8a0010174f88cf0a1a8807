package best_store;

import java.util.Scanner;

public class StoreDriver {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		while(true) {
		System.out.println("Insert opertion you want to perform");
		String op = sc.nextLine();
		
		switch(op) {
		case "connect":{
			
			System.out.println("Enter database name");
			String database = sc.next();
			System.out.println("Enter username ");
			String user = sc.next();
			System.out.println("Enter pass");
			String pass = sc.next();
			Store.connectDB(database, user,pass);
			break;
			
			} 
		case "createSchema" : {
			System.out.println("Enter your query to create table");
			String query = sc.nextLine();
			Store.createSchema(query);
			break;
		}
		
		case "insert":{
			System.out.println("Enter your query to insert record in table");
			String query = sc.nextLine();
			Store.insertRecords(query);
			break;
			
		}
		
		case "update":{
			System.out.println("Enter your query to update table");
			String query = sc.nextLine();
			Store.updateRecord(query);
			break;
		}
		case "delete":{
			System.out.println("Enter your query to delete record from table");
			String query = sc.nextLine();
			Store.deleteRecord(query);
			break;
		}
		
		case "viewProducts":{
			System.out.println("Enter your query to view  records");
			String query = sc.nextLine();
			Store.viewProducts(query);
			break;
		}
		case "totalPrice" : {
			Store.totalPrice();
			break;
		}
		
		default:
			System.out.println("operation completed");
		
		
		}
		
		}

	}

}
